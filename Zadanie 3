//Дан массив размера n. Считая, что нумерация элементов в массиве начинается с 0, найти номера тех элементов массива,
//которые больше своего левого соседа и количество таких элементов. Найденные номера выводить в порядке убывания. Использовать указатели для
//доступа к очередному элементу массива.
#include "pt4.h"
using namespace std;

void Solve()
{
    Task("TheMassiv27");
    int n;
    pt >> n;
    int* x;
    x = new int[n];
    for (int i = 0; i < n; i++) 
        pt >> *(x+i);
    int j = 0;
    for (int i =(n-1); i > 0; i--) {
        if (n < 2)pt << 0;
        if (*(x + i - 1) < *(x + i)) {
            pt << i;
            j++;
        }
    }
    pt << j;
}
